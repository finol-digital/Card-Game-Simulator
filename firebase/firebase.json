{
  "hosting": {
    "public": "public",
    "appAssociation": "AUTO",
    "redirects": [
      {
        "source": "/gatcg",
        "destination": "https://cgs.games/gatcg/grand_archive_tcg",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/main",
        "destination": "/index.html"
      },
      {
        "source": "/play",
        "destination": "/index.html"
      },
      {
        "source": "/decks",
        "destination": "/index.html"
      },
      {
        "source": "/cards",
        "destination": "/index.html"
      },
      {
        "source": "/settings",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
